
<table class="groups-table">
  <tbody>
    <thead>
      <tr>
        <th colspan="2">
          <h4>Groups</h4>
        </th>
      </tr>
    </thead>
    <% current_user.groups.each do |group| %>
      <%if group.name == @group.name%>
        <tr class="group-row chosen-group" data-link="<%= group_path(group)%>">
          <td colspan="2"><%=group.name%></td>
        </tr>
      <% else %>
        <tr class="group-row" data-link="<%= group_path(group)%>">
          <td colspan="2"><%=group.name%></td>
        </tr>
      <% end %>
    <% end%>
    <tr>
      <td><%= link_to 'New Group', new_group_path, class: "tiny button"%>
      </td>
      <td><%= link_to "Edit Group", edit_group_path(@group)%>
      </td>
    </tr>
  </tbody>
</table>






