<h1>Groups</h1>
<table class="groups-table">
  <tbody>
    <% current_user.groups.each do |group| %>
      <%if group.name == @group.name%>
        <tr class="group-row chosen-group" data-link="<%= group_path(group)%>">
          <td><%=group.name%></td>
        </tr>
      <% else %>
        <tr class="group-row" data-link="<%= group_path(group)%>">
          <td><%=group.name%></td>
        </tr>
      <% end %>
    <% end%>
  </tbody>
</table>

<%= link_to 'New Group', new_group_path, class: "tiny button"%>

