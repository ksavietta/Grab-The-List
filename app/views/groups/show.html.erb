
<%content_for :main_title do %>
  <div class="medium-4 columns">
    <h1><strong><%=@group.name%></strong></h1>
  </div>

  <%= link_to "Edit Group", edit_group_path(@group)%>

  <div class="medium-8 columns" id="make-a-purchase">
    <%= link_to 'Make a Purchase', new_group_purchase_path(@group), class: "button" %>
  </div>


<%end%>

<div class="main-wrapper">

    <% @group.unpurchased_items.each do |item| %>
      <%= item.name %><br/> <br/>
    <% end %>

    <br/>
    <%= render 'items/form', group: @group %>

</div>

  <div id="purchases">
    <%= render 'group_purchases' %>
  </div>


<%content_for :right_side_bar do%>
  <div id="your-groups">
    <%= render 'members' %>
  </div>

  <% if current_user.find_membership(@group).owes%>
    <%= button_to "Settle Your Debt", "#" %>
  <%end%>
  <br>

<% end %>