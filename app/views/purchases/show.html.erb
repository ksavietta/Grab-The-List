<div class="small-12 medium-8 columns faded-background" id="purchase-show">


  <% if @purchase.user == current_user %>
    <h3>Your Purchase on <%=@purchase.formatted_date%></h3>
  <% else %>
    <h3><%= "#{@purchase.user.name}'s purchase on #{@purchase.formatted_date}"%></h3>
  <%end%>
  <p>
    <strong>Purchased:</strong>
    <%= @purchase.formatted_date %>
  </p>

  <p>
    <strong>Group Purchased For:</strong>
    <%= @group.name %>
  </p>

  <p>
    <strong>Items:</strong>
    <% @purchase.items.each do |item| %>
        <% if @purchase.items.count > 1 %>
          <% if item == @purchase.items.last %>
            <%= "#{item.name}" %>
          <% else%>
            <%= "#{item.name}, " %>
          <%end%>
        <% else %>
          <%= item.name %>
        <% end %>
    <% end %>
  </p>

  <p>
    <strong>Cost:</strong>
    <%= @purchase.cost%>
  </p>

  <%= image_tag @purchase.receipt_photo_url.to_s %>

  <p>
  <%= link_to 'Edit purchase Info', edit_group_purchase_path(@group, @purchase) %>
  </p>

  <%= link_to "Back to #{@group.name}", group_path(@group), class: "button" %>


  <%content_for :right_side_bar do%>

    <div id="purchases" class="small-6 medium-4 columns">
      <%= render 'groups/group_purchases' %>
    </div>

    <br>

  <% end %>

</div>
