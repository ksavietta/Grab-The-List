<div class="cover">
  <div class="small-12 columns small-centered">
    <span class="cover-logo">Grab the List</span>
  </div>
</div>

<div class="row">
  <div class="small-8 medium-5 large-5 columns small-centered faded-background">
  <h3>Sign in and Get Shopping!</h3>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, placeholder: "Enter email" %>
      <%= f.input :password, :required => false, placeholder: "Enter Password" %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign In" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>