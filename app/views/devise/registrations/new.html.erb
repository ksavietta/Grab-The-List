
<div class="cover">
  <div class="small-12 columns small-centered">
    <span class="cover-logo">Grab the List</span>
  </div>
</div>

<div class="row">
  <div class="small-12 small-centered medium-4 large-4 columns faded-background">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as:resource_name, url:registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, label: 'First Name', required:true, autofocus:true %>
        <%= f.input :last_name, label: 'Last Name', required:true, autofocus:true %>
        <%= f.input :email, required:true, autofocus:true %>
        <%= f.input :password, required:true %>
        <%= f.input :password_confirmation, label: 'Password Confirmation', required:true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>



