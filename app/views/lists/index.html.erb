
<%- if user_signed_in? -%>
  <h1>Lists</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= link_to list.name, list %></td>
          <td><%= list.description %></td>
          <td><%= list.price %></td>
          <td><%= link_to 'Show', list %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to "New List", new_list_path, :class => "button", :method => :get  %>
<%- else -%>
  <h1>It seems that you are not signed in! Please do so to make your lists!</h1>
<%- end -%>